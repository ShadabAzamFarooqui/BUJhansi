<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_Green"
    android:clipToPadding="false"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingBottom="@dimen/outer_padding">

        <TextView
            android:id="@+id/welcomeTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/logo_imageview"
            android:layout_marginTop="15dp"
            android:text="Welcome in"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/textsizeSmL"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:background="@drawable/btn_background"
            android:layout_below="@+id/welcomeTxt"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:tag="t1"
            android:text="IT Department"
            android:textColor="@color/white"
            android:textSize="@dimen/textsizeMaxL"
            android:textStyle="bold|italic" />

        <ImageView
            android:id="@+id/logo_imageview"
            android:layout_width="match_parent"
            android:layout_height="@dimen/splash_image_width_height"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_login"
            android:visibility="visible" />


        <RelativeLayout
            android:id="@+id/button_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom">

            <Button
                android:id="@+id/signin"
                style="@style/Base.AlertDialog.AppCompat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sign In"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/textsizeNormal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/signup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/signin"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/element_padding"
                android:gravity="center"
                android:text="No account yet? Create one"
                android:textColor="@color/white"
                android:textSize="@dimen/textsizeNormal"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/its_free"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/signup"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/signup"
                android:layout_below="@+id/signup"
                android:layout_marginBottom="11dp"
                android:layout_marginRight="5dp"
                android:text="click2hike.com"
                android:textColor="@color/red"
                android:textSize="@dimen/textsizevSmall"
                android:textStyle="italic|bold" />
        </RelativeLayout>
    </LinearLayout>


</ScrollView>

