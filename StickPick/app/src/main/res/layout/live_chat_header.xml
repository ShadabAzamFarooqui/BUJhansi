<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/parentLinearLayout"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/backButtonLayout"
        android:layout_width="@dimen/icon_space_width"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:background="@drawable/more_options_on_green_bg"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:background="@drawable/back_button"
            android:visibility="visible" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/title_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
       
        android:layout_weight="1" >

        <RelativeLayout
            android:id="@+id/title_sub_relative_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical" >

            <TextView
                android:id="@+id/activity_main_content_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left|center_vertical"
                android:text="Live Chat"
                android:textColor="@color/black"
                android:textSize="@dimen/textsizeHeader" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/attachmentLayout"
        android:layout_width="@dimen/icon_space_width"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/more_options_on_green_bg"
        android:gravity="center"
        android:visibility="visible" >

        <ProgressBar
            android:id="@+id/refreshProgressBar"
            android:layout_width="@dimen/login_progress_width_height"
            android:layout_height="@dimen/login_progress_width_height"
            android:layout_centerInParent="true"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/attachment"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerInParent="true"
            android:src="@drawable/attachment"
            android:visibility="visible" >
        </ImageView>
    </RelativeLayout>

</LinearLayout>